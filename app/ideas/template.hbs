<div class="row">
    <div class="col-xs-12 col-sm-9">
        <h2>Ideas</h2>
        <ul>
            {{#each sortedIdeas as |idea|}}
                <li>{{idea-item idea=idea ideaIdForVotes=ideaIdForVotes vote='vote'}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="col-xs-12 col-sm-3">
        <h3>Contribute an idea</h3>
        {{input class="newIdea-title" value=ideaTitle placeholder='Title'}}
        {{textarea class="newIdea-description" value=ideaDescription placeholder='Description'}}
        <button class="btn btn-default btn-block" {{action 'createIdea'}}>Add</button>
    </div>
</div>

<div class="row ideas">
    <div class="col-xs-12 col-sm-9">
        <h2>Ideas</h2>
        <h2>Is confirmed :{{currentUser.isConfirmed}}</h2>
        <ul>
            {{#each sortedIdeas as |idea|}}
                <li>{{idea-item idea=idea ideaIdForVotes=ideaIdForVotes vote='vote' isAuthenticated=isAuthenticated isConfirmed=currentUser.isConfirmed presentLoginModal='presentLoginModal' presentConfirmationModal='presentConfirmationModal'}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="col-xs-12 col-sm-3 newIdea">
        <h3>Contribute an idea</h3>{{currentUser.ideasCount}}/3
        {{#if isMaxIdeas}}
            Maxxed out Bro
            
        {{else}}
            {{input     class="title"       value=ideaTitle       placeholder='Title'}}
            {{textarea  class="description" value=ideaDescription placeholder='Description'}}
            <button class="btn btn-default btn-block" {{action 'createIdea'}}>Add</button>
        {{/if}}
    </div>
</div>

{{modal-login visible=loginModalVisible }}
{{modal-confirmationrequest visible=isConfirmationModalVisible }}